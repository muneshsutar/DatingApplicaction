<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.Profile.SlideshowFragment">

    <ImageView
        android:id="@+id/profileImgBackground"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/blue_border_rounded_cornwe"
        >

    </ImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="140dp"
        android:layout_marginStart="150dp"
        android:src="@drawable/ic_person"
        android:background="@drawable/blue_border_rounded_cornwe"
        app:civ_border_width="2dp"
        app:civ_border_color="#FDFCFC"/>
    <RelativeLayout
        android:id="@+id/layoutProfileName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/profile_image"
        android:layout_margin="20dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp">

        </ImageView>

        <TextView
            android:id="@+id/profeName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="@android:dimen/app_icon_size"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/calibri"
            android:textColor="@color/black"
            android:textSize="17sp">

        </TextView>


    </RelativeLayout>

    <TextView
        android:id="@+id/ftxt"
        android:layout_below="@id/layoutProfileName"
       android:layout_marginStart="25dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#393838"
        android:background="@color/white"

        android:text="@string/this_name_will_be_visible_in_your_profile">

    </TextView>
    <RelativeLayout
        android:id="@+id/gmaillayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ftxt"
        android:layout_margin="20dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_baseline_email_24"
            android:layout_margin="5dp"

            >

        </ImageView>
        <TextView
            android:id="@+id/profeEmail"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/calibri"
            android:layout_marginStart="@android:dimen/app_icon_size"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            >

        </TextView>


    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@id/gmaillayout"
        android:layout_marginStart="230dp"
        android:background="@drawable/button_background1"
        android:text="@string/logout"
        android:textSize="17sp">


    </androidx.appcompat.widget.AppCompatButton>





</RelativeLayout>